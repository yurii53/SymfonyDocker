{% extends 'base.html.twig' %}

{% block title %}Quotes{% endblock %}

{% block body %}
    <style>
        .wrapper {
            margin: 1em auto;
            width: 95%;
        }
    </style>

    <div class="wrapper">
        <h1>Great Quotes</h1>
        <table class="table table-striped table-hover table-bordered">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Quote</th>
                <th scope="col">Historian</th>
                <th scope="col">Year</th>
                <th scope="col">Address</th>
            </tr>
            </thead>
            <tbody>
            {% for quote in quotes %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ quote.quote }}</td>
                    <td>{{ quote.historian }}</td>
                    <td>{{ quote.year }}</td>
                    <td>{{ quote.address }}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="wrapper">
        <h1>Great DeathNote</h1>
        <table class="table table-striped table-hover table-bordered">
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Name</th>
                <th scope="col">Born Year</th>
                <th scope="col">City Of Born</th>
                <th scope="col">Dead Year</th>
                <th scope="col">City of Dead</th>
                <th scope="col">Age</th>
                <th scope="col">Dead N Years Ago</th>
            </tr>
            </thead>
            <tbody>
            {% for person in persons %}
                <tr>
                    <td>{{ loop.index }}</td>
                    <td>{{ person.name}}</td>
                    <td>{{ person.bornYear}}</td>
                    <td>{{ person.cityOfBorn}}</td>
                    <td>{{ person.deadYear}}</td>
                    <td>{{ person.cityOfDead}}</td>
                    <td>{{ person.deadYear - person.bornYear}}</td>
                    <td>{{ person.now - person.deadYear}}</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
